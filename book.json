{
	"title" : "Chitty's NoteBook",
	"description" : "学海无涯",
	"author": "Chitty",
	"language": "zh-hans",
	"root": "./",
    "plugins": [
        "-lunr", "-search", "search-plus",
        "-sharing",
        "-highlight", "prism",
        "anchors",
        "emphasize",
        "splitter",
        "expandable-chapters-small",
        "toc",
        "git-author",
        "mermaid-gb3",
        "mathjax-update-cdn",
        "chart"
    ],
    "pluginsConfig": {
        "theme-default": {
            "showLevel": false
        },
        "git-author": {
            "modifyTpl": "<span style=\"font-size:75%\">Last modified by {user} {timeStamp}</span>",
            "createTpl": "<span style=\"font-size:75%\">Created by {user} {timeStamp}</span>"
        },
        "prism": {
            "ignore": [
                "mermaid"
            ]
        },
        "chart": {
            "type": "highcharts"
        }
    }
}
